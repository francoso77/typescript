{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs", //ou module para usar o export e import
    //"check": true,   para checar o javaescript
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "./src/**/node_modules",
    "node_modules"
  ]
}